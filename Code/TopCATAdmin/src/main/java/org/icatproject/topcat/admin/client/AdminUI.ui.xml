<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:javax.persistence"
	xmlns:i="urn:import:com.sun.rowset.internal" xmlns:d="urn:import:com.google.gwt.dom.client"
	xmlns:a="urn:import:java.awt" xmlns:asm="urn:import:com.google.gwt.dev.asm" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:DockLayoutPanel styleName="centerBodyContent">

		<g:north size="81.0">
			<g:SimplePanel styleName="centerObject" height="80px">
				<g:Label styleName="MainTitle">Topcat Admin Console</g:Label>
			</g:SimplePanel>
		</g:north>
		
		<g:center>
			<g:SplitLayoutPanel ui:field="sPanel">
				
				<g:east size="30"> 
					<g:FlowPanel styleName="table_style" ui:field="flowPanel">
						<g:Label styleName="helpHeader">Help</g:Label>
						<g:VerticalPanel spacing="10">
							<g:Label text="In order to use topcat it must be configured to point to one or more icats. This web page allows admins to configure topcat to point to one or more icats. " styleName="italic"/>
							<g:Label text="Adding an Icat" styleName="helpSubHeader"/>
							
							
							<g:Label text="To add an icat click on the add button. This will present you with a form to complete. Enter a name for the facility, this is the name that gets presented to the users. Select the version number of the icat that you are going to talk to. Enter the URL of the icats wsdl, e.g. http://example.com/ICATService/ICAT?wsdl. You may select a bespoke search plugin to associate with the facility, currently plugins exist for DLS and ISIS. Select a download plugin and provide the URL of the download server. You can then save the information.">..</g:Label>
							<g:Label text="The next step is to associate one or more authentication plugins with the icat server. To do this click on the Show Auth. Details button and then on the add button that has just popped up. This will present you with another form to complete. Enter a display name. If you are providing more than one type of authentication the user will be presented with the list of display names to select from. You should therefore ensure that the display names are meaningful to the user. Select the appropriate authentication service type and if necessary provide a URL of the authentication service. You can then save the information. Add additional authentication details as required."/>
							<g:Label text="Testing Connections" styleName="helpSubHeader">..</g:Label>
							<g:Label text="Ping functions have been provided to test that services are listening on the given URLs. This gives no guarantee that the remote service is functioning correctly."/>	
							
							
						</g:VerticalPanel>
					</g:FlowPanel>
				</g:east> 

				<g:north size="200.0">
					<g:ScrollPanel ui:field="scrollPanel">
						<g:SimplePanel width="100%">
							<g:HTMLPanel width="" styleName="mergeAuto" ui:field="htmlPanel">
								<g:Label styleName="TableHeader" width="" >ICAT Servers</g:Label>
								<g:FlexTable ui:field="tableHeader" styleName="header"></g:FlexTable>
								<g:FlexTable ui:field="table0" styleName="buttonSpacing"></g:FlexTable>
								<g:SimplePanel styleName="margin-top">
									<g:Button ui:field="btnAdd" text="add" ></g:Button>
								</g:SimplePanel>
							</g:HTMLPanel>
						</g:SimplePanel>		
					</g:ScrollPanel>
				</g:north>

				<g:center>
					<g:SimplePanel width="100%" ui:field="simplePanel0">
						<g:HTMLPanel styleName="mergeAuto">
							<g:Label styleName="TableHeader" ui:field="lblAuth"
							visible="false"></g:Label>
							<g:FlexTable ui:field="table1" styleName="buttonSpacing"></g:FlexTable>
							<g:SimplePanel styleName="margin-top">
								<g:Button ui:field="btnAddAuth" text="add" visible="false" ></g:Button>
							</g:SimplePanel>
						</g:HTMLPanel>
					</g:SimplePanel>	
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
		<g:south size="1">
			<g:FlowPanel styleName="centerObject">
				<g:SimplePanel>
					<g:DialogBox ui:field="tableMenu" modal="true"
						glassEnabled="true" visible="false">
						<g:VerticalPanel ui:field="vPanel">
							<g:FlexTable ui:field="editMenu" styleName="mainBody">
							</g:FlexTable>
							<g:TextBox ui:field="txtName"
								title="This will be the name that is presented to users"></g:TextBox>
							<g:ListBox ui:field="txtVersion"></g:ListBox>
							<g:TextBox ui:field="txtServerUrl"
								title="This should be the URL of the WSDL, e.g. https://example.com/ICATService/ICAT?wsdl"></g:TextBox>
							<g:ListBox ui:field="txtPluginName"></g:ListBox>
							<g:ListBox ui:field="txtDownloadPluginName"></g:ListBox>
							<g:TextBox ui:field="txtDownloadServiceUrl"
								title="This is the URL of the download service that will be used by the selected download plugin"></g:TextBox>
							<g:HorizontalPanel ui:field="hPanel0"
								styleName=".mainBody">
								<g:Button ui:field="btnSave" styleName="button-spacing"></g:Button>
								<g:Button ui:field="btnCancel" styleName="button-spacing">cancel</g:Button>
							</g:HorizontalPanel>
							<g:Label ui:field="lbl1" styleName="font"></g:Label>
						</g:VerticalPanel>
					</g:DialogBox>
				</g:SimplePanel>
				<g:SimplePanel>
					<g:DialogBox ui:field="alertDialogBox" modal="true"
						glassEnabled="true" text="Warning" visible="false">
						<g:VerticalPanel styleName="alertMainBody">
							<g:Label ui:field="lbl0"
								text="The selected row will be deleted. Would you like to continue?"></g:Label>
							<g:HorizontalPanel ui:field="hPanel1"
								styleName="centerBodyContent">
								<g:Button ui:field="btnYes" styleName="button-spacing">Yes</g:Button>
								<g:Button ui:field="btnNo" styleName="button-spacing">No</g:Button>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:DialogBox>
				</g:SimplePanel>
				<g:SimplePanel>
					<g:DialogBox ui:field="authMenu" modal="true"
						glassEnabled="true" visible="false">
						<g:VerticalPanel>
							<g:FlexTable ui:field="editMenu1" styleName="mainBody"></g:FlexTable>
							<g:TextBox ui:field="txtDisplayName"></g:TextBox>
							<g:ListBox ui:field="txtAuthType"></g:ListBox>
							<g:ListBox ui:field="txtAuthPluginName" visible="false"></g:ListBox>
							<g:TextBox ui:field="txtAuthURL"></g:TextBox>
							<g:HorizontalPanel ui:field="hPanel2"
								styleName="mainBody">
								<g:Button ui:field="btnSave1" styleName="button-spacing"></g:Button>
								<g:Button ui:field="btnCancel1" styleName="button-spacing">cancel</g:Button>
							</g:HorizontalPanel>
							<g:Label ui:field="lbl3" styleName="font"></g:Label>
						</g:VerticalPanel>
					</g:DialogBox>
				</g:SimplePanel>
				<g:SimplePanel>
					<g:DialogBox ui:field="PingDialogBox" modal="true"
						glassEnabled="true" visible="false">
						<g:VerticalPanel styleName="alertMainBody"
							spacing="2">
							<g:Label ui:field="lbl2"></g:Label>

							<g:HorizontalPanel styleName="centerBodyContent">
								<g:Button ui:field="btnOk">ok</g:Button>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:DialogBox>
				</g:SimplePanel>
			</g:FlowPanel>
		</g:south>
	
	</g:DockLayoutPanel>
</ui:UiBinder>


