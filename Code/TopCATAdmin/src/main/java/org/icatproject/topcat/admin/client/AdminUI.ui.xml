<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:javax.persistence" xmlns:i="urn:import:com.sun.rowset.internal" xmlns:H="urn:import:com.google.gwt.user.client.ui.HTMLTable">
	<ui:style>
		.head-style{
			background-color: #ececec;
		}
		
		.spacing{
			margin-left: 5px;
		}
		
		.mainBody{	
			background-color: #C5DEE6;
			font: bold;
			}
			
		.button-spacing{
			margin-right: 5px;
		}
		
		.alertTextBody{
				margin-top: 20px;
		}
		
		.alertMainBody{
			background-color: #C5DEE6;
		}
		
		.
		
	</ui:style>
	
	
	<g:HTMLPanel >
	
		<g:FlexTable ui:field="table" />	
		<g:Button ui:field="btnAdd" text="add"></g:Button>
					
		<g:DialogBox ui:field="dialogWindow" visible="false" modal="true" glassEnabled="true" > 
			<g:VerticalPanel ui:field="vPanel">
					
					<g:FlexTable ui:field="editMenu" styleName="{style.mainBody}"></g:FlexTable>
				
					<g:TextBox ui:field="txtName" title="This will be the name that is presented to users"></g:TextBox>
					<g:ListBox ui:field="txtVersion" ></g:ListBox>
					<g:TextBox ui:field="txtServerUrl" title="This should be the URL of the WSDL, e.g. https://example.com/ICATService/ICAT?wsdl"></g:TextBox>
					<g:ListBox ui:field="txtPluginName"  ></g:ListBox>
					<g:ListBox ui:field="txtDownloadPluginName" ></g:ListBox>
					<g:TextBox ui:field="txtDownloadServiceUrl" title="This is the URL of the download service that will be used by the selected download plugin"></g:TextBox>


					<g:HorizontalPanel ui:field="hPanel0">
		 				<g:Button ui:field="btnSave" styleName="{style.button-spacing}">save</g:Button>
						<g:Button ui:field="btnCancel" styleName="{style.button-spacing}">cancel</g:Button>
					</g:HorizontalPanel>
					
			</g:VerticalPanel>
		</g:DialogBox>					
		
		
		<g:DialogBox ui:field="alertDialogBox" visible="false" modal="true" glassEnabled="true" text="Warning"  >
			<g:VerticalPanel styleName="{style.alertMainBody}">
				
				<g:Label ui:field="lbl0" text="Selected row will be deleted. Would you like to continue?"></g:Label>
			
				<g:HorizontalPanel ui:field="hPanel1" styleName="{style.alertTextBody}">
			 				<g:Button ui:field="btnYes" styleName="{style.button-spacing}">Yes</g:Button>
							<g:Button ui:field="btnNo" styleName="{style.button-spacing}">No</g:Button>
				</g:HorizontalPanel>
				
			</g:VerticalPanel>
		</g:DialogBox>
	
	
	</g:HTMLPanel>

</ui:UiBinder>


