<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <servlet>
    <servlet-name>DataService</servlet-name>
    <servlet-class>org.icatproject.topcat.admin.server.DataServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DataService</servlet-name>
    <url-pattern>/topcat_admin/DataService</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>topcat_admin.html</welcome-file>
  </welcome-file-list>
  
  
  
  
  
  
      <security-constraint>
        <display-name>DOIWebserviceSecurity</display-name>
        <web-resource-collection>
            <web-resource-name>DOIWebservice</web-resource-name>
            <description>DOI Webservices can only be accessed from admin</description>
            <url-pattern>/topcat_admin</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>topcatAdmin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>topcatAdmin</role-name>
    </security-role>
  
  
</web-app>